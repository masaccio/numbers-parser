{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": true
        },
        {
            "name": "Debug extract_functions.py",
            "type": "debugpy",
            "request": "launch",
            "program": "src/build/extract_functions.py",
            "console": "integratedTerminal",
            "env": {
                "PYDEVD_DISABLE_FILE_VALIDATION": "1"
            },
            "justMyCode": true,
            // Generate the disassembly from /tmp/Numbers.unsigned.app/Contents/MacOS/Numbers using:
            // objdump --disassemble --no-addresses --no-print-imm-hex --no-show-raw-insn --macho --objc-meta-data
            "args": [
                "test.s",
                "test.py"
            ]
        }
    ]
}
