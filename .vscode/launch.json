{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "justMyCode": true
        },
        {
            "name": "Pytest: Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "env": {
                "PYTEST_ADDOPTS": "--no-cov",
                "PYDEVD_DISABLE_FILE_VALIDATION": "1",
            },
            "pythonArgs": [
                "-Xfrozen_modules=off"
            ],
            "justMyCode": true,
            "args": [
                "${file}"
            ]
        }
    ]
}